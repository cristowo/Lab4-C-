<Window x:Class="view.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:view"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="431*"/>
        </Grid.RowDefinitions>
        <Image Source="/Sin título-1.png" Margin="0,-240,-675,-236" Grid.RowSpan="2" Opacity="0.4">
            <Image.OpacityMask>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="Black" Offset="1"/>
                </LinearGradientBrush>
            </Image.OpacityMask>
        </Image>
        <Label x:Name="Titulo" Content="DOBBLE GAME" HorizontalAlignment="Center" Margin="0,30,0,0" Grid.Row="1" VerticalAlignment="Top" HorizontalContentAlignment="Center" FontFamily="Segoe UI Black" Height="85" Width="322" FontSize="36"/>
        <Button x:Name="Iniciar_Juego" Content="Iniciar Juego" HorizontalAlignment="Center" Margin="0,216,0,0" Grid.Row="1" VerticalAlignment="Top" BorderBrush="Black" Background="#FF5CB4E2" FontSize="20" Width="162" FontFamily="Segoe UI Black"/>
        <Button x:Name="Iniciar_Juego_Copy" Content="Configuración" HorizontalAlignment="Center" Margin="0,285,0,0" Grid.Row="1" VerticalAlignment="Top" BorderBrush="Black" Background="#FFC5C5C5" FontSize="20" Width="162" FontFamily="Segoe UI Black"/>
        <Button x:Name="Iniciar_Juego_Copy1" Content="Salir &gt;:c" HorizontalAlignment="Center" Margin="0,351,0,0" Grid.Row="1" VerticalAlignment="Top" FontSize="20" Background="Red" Width="162" FontFamily="Segoe UI Black" Foreground="Black" BorderBrush="Black"/>

    </Grid>
</Window>
